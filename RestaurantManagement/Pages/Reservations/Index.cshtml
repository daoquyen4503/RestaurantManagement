        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reservation_DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number_of_People)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.Table_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Reservation_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Reservation_ID">Details</a> |
